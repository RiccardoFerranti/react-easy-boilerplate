{
  "name": "react-easy-boilerplate",
  "version": "1.0.0",
  "description": "A quick and easy boilerplate to run a React application",
  "main": "src/index.js",
  "author": "Riccardo Ferranti",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RiccardoFerranti/react-easy-boilerplate/issues"
  },
  "homepage": "https://github.com/RiccardoFerranti/react-easy-boilerplate#readme",
  "keywords": [
    "react",
    "webpack",
    "babel",
    "sass",
    "scss",
    "css",
    "webpack"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RiccardoFerranti/react-easy-boilerplate.git"
  },
  "scripts": {
    "start": "webpack-dev-server --config ./webpack.config.dev.js --mode development",
    "build": "webpack --config ./webpack.config.prod.js --mode production",
    "lint": "eslint ./src",
    "lint-fix": "eslint ./src --fix",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "autoprefixer": "^9.3.1",
    "prop-types": "^15.6.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^1.0.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "eslint": "^5.7.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "mini-css-extract-plugin": "^0.4.4",
    "node-sass": "^4.9.4",
    "postcss-loader": "^3.0.0",
    "react-hot-loader": "^4.3.11",
    "regenerator-runtime": "^0.12.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "stylelint": "^9.6.0",
    "stylelint-webpack-plugin": "^0.10.5",
    "webpack": "^4.21.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./__test__/enzyme.setup.js",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss|sass)$": "<rootDir>/__mocks__/styleMock.js"
    }
  }
}
